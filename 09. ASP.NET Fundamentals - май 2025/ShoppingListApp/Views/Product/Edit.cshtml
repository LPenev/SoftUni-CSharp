@using ShoppingListApp.Models.Product
@model ProductViewModel
@{
	ViewBag.Title = "Edit Product";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<dv class="row">
	<form method="POST">
		<div class="form-group">
			<input asp-for="Id" type="hidden" />
			
			<div class="mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" placeholder="Write your product name here..." />
				<span asp-validation-for="Name" class="small text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" class="form-control" placeholder="Write your product name here..." ></textarea> 
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>

		</div>
		<input class="btn btn-primary mt-3" type="submit" value="Edit" />
	</form>
</dv>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}