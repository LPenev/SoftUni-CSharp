@using RecipeSharingPlatform.ViewModels.Recipe
@model RecipeDeleteViewModel

@{
    ViewData["Title"] = "Favorite Recipe";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body d-flex">
                <div class="me-3" style="flex-shrink: 0;">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 150px; height: auto;" alt="@Model.Title" />
                    }
                    else
                    {
                        <img src="~/images/default-image.jpg" class="img-fluid" style="max-width: 150px; height: auto;" alt="No Image Available" />
                    }
                </div>
                <div>
                    <h3 class="card-title">@Model.Title</h3>
                    <p class="mb-0"><strong>Published By:</strong> @Model.Author</p>
                    <p class="text-danger mt-3">
                        Are you sure you want to remove <strong>@Model.Title</strong> from Favorites?
                    </p>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="ConfirmRemove" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Title" />
                    <input type="hidden" asp-for="AuthorId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Remove
                    </button>
                </form>
                <a asp-controller="Recipe" asp-action="Favorites" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
